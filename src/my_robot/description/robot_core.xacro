<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1.0 0.4 0.0 1.0"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_link">
    </link>

    <joint name="chasis_joint" type="fixed">

        <origin xyz="0.1 0 0.0375"/>
        <parent link="base_link"/>
        <child link="chasis"/>

    </joint>

    <link name="chasis">

        <visual>
            <origin xyz="0 0 0.03"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.03"/>
            <geometry>
                <cylinder length="0.15" radius="0.3"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" radius="0.3" length="0.15">
            <origin xyz="0 0 0.03"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="chasis">
        <material>
            Gazebo/White
        </material>
    </gazebo>

    <joint name="left-wheel-joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.3" length="0.15">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>
            Gazebo/Black
        </material>
    </gazebo>

    <joint name="right-wheel-joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.3" length="0.15">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>
            Gazebo/Black
        </material>
    </gazebo>

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chasis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.25 0 -0.0375"/>
    </joint>

    <link name="caster_wheel">

        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.1" radius="0.3">
            <origin xyz="0 0 0"/>
        </xacro:inertial_sphere>

    </link>

    <gazebo reference="caster_wheel">
        <material>
            Gazebo/Black
        </material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>



</robot>